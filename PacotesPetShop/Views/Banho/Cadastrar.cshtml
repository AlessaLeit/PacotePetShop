@model BanhoModel
@{
    ViewData["title"] = "Cadastrar Banho";
}

<div class="container by-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h2>Cadastrar Banho</h2>
        <p class="text-secondary">Preencha o formulário abaixo para cadastrar um novo banho.</p>
    </div>

    <form method="post" asp-controller="Banho" asp-action="Cadastrar">

        <select asp-for="IdCliente" class="form-select" required
                asp-items="@(new SelectList(ViewBag.Clientes, "IdCliente", "NomeCachorro"))">
            <option value="">Selecione um cliente</option>
        </select>

        <div class="mb-3">
            <label for="observacoes" class="form-label text-light">Observações</label>
            <input type="text" class="form-control" asp-for="Observacoes" id="observacoes" required
                   placeholder="Digite diretamente: Tosa/Simparic...">
        </div>

        <div class="mb-3">
            <label class="form-label text-light" for="dataBanho">Data Banho</label><br>
            <input type="date" class="form-control" asp-for="DataVisita" id="dataBanho" required>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn-success m-50">Adicionar</button>
            <a class="btn btn-primary m-50" asp-controller="Banho" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>
